@model List<ClaimFlow.Web.Models.Claim>
@{
    Layout = "_Layout";
    string Badge(ClaimFlow.Web.Models.ClaimStatus s) => s switch
    {
        ClaimFlow.Web.Models.ClaimStatus.Submitted => "secondary",
        ClaimFlow.Web.Models.ClaimStatus.Verified => "info",
        ClaimFlow.Web.Models.ClaimStatus.Approved => "success",
        _ => "danger"
    };
}
<h2>My Claims</h2>
<table class="table table-striped">
    <thead><tr><th>Date</th><th>Lecturer</th><th>Hours</th><th>Rate</th><th>Total</th><th>Status</th><th>Docs</th></tr></thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.CreatedAt.ToLocalTime()</td>
                <td>@c.LecturerName</td>
                <td>@c.HoursWorked</td>
                <td>@("R " + c.HourlyRate.ToString("0.00"))</td>
                <td><strong>@("R " + c.Total.ToString("0.00"))</strong></td>
                <td><span class="badge text-bg-@Badge(c.Status)">@c.Status</span></td>
                <td>
                    @foreach (var d in c.Documents)
                    {
                        <a class="btn btn-sm btn-outline-secondary" href="/Claims/Download/@c.Id?file=@d.EncryptedFileName">Download: @d.OriginalFileName</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
