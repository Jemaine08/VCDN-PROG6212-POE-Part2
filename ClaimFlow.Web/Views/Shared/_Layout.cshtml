@{
    Layout = null;
    var ok = TempData["Ok"] as string;
    var err = TempData["Err"] as string;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>ClaimFlow</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
</head>
<body class="bg-light">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-3">
        <div class="container">
            <a class="navbar-brand" href="/">ClaimFlow</a>
            <div class="navbar-nav">
                <a class="nav-link" href="/Claims/Create">Lecturer Submit</a>
                <a class="nav-link" href="/Claims/My">My Claims</a>
                <a class="nav-link" href="/Coordinator">Coordinator</a>
                <a class="nav-link" href="/Manager">Manager</a>
            </div>
        </div>
    </nav>

    <div class="container">
        @if (!string.IsNullOrEmpty(ok))
        {
            <div class="alert alert-success">@ok</div>
        }
        @if (!string.IsNullOrEmpty(err))
        {
            <div class="alert alert-danger">@err</div>
        }

        @RenderBody()
    </div>

    <!-- Bootstrap JS bundle (Popper included) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    @* Allow views to inject page-specific scripts (e.g., Create.cshtml’s @section Scripts) *@
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
